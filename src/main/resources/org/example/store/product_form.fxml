<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.ProductFormController" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
    <Label text="Добавить/Изменить товар" style="-fx-font-size: 16px;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Название:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Цена:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Количество:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="quantityField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Категория:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="categoryField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    <HBox spacing="10">
        <Button text="Сохранить" onAction="#onSave"/>
        <Button text="Отмена" onAction="#onCancel"/>
    </HBox>
</VBox>
