<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.store.Controllers.ProductFormController" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300" style="-fx-padding: 20;">
    <Label text="Добавить/Изменить товар" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">

        <Label text="Название:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Введите название"/>

        <Label text="Цена:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Введите цену"/>

        <Label text="Количество:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="quantityField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Введите количество"/>

        <Label text="Категория:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="categoryField" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Введите категорию"/>

    </GridPane>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" visible="false"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Сохранить" onAction="#onSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 5 15;"/>
        <Button text="Отмена" onAction="#onCancel" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 5 15;"/>
    </HBox>
</VBox>
